<div class="container">
<%= form_with(model: top_ware) do |form| %>
    <% if top_ware.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(top_ware.errors.count, "error") %> prohibited this top_ware from being saved:</h2>

        <ul>
          <% top_ware.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row justify-content-center">
    <div class="col-10">
      <div class="form-group row">
        <%= form.label :style, style: "display: block", class:"col-2 col-form-label"%>
        <div class="col-10">
          <%= form.text_field :style, class: "form-control"%>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :description, style: "display: block", class:"col-2 col-form-label" %>
        <div class="col-10">
        <%= form.text_area :description, rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :price, style: "display: block", class:"col-2 col-form-label" %>
        <div class="col-10">
        <%= form.number_field :price, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :origin, style: "display: block", class:"col-2 col-form-label" %>
        <div class="col-10">
        <%= form.text_field :origin, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-sm-10 justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-xs"%>
        </div>
      </div>
    <% end %>
    </div>
    <%= link_to "[Back to top wares]", top_wares_path %>
  </div>
</div>
